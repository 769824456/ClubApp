<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_item_user"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rv_margin_top_bottom"
        android:layout_marginLeft="@dimen/rv_margin_left_right"
        android:layout_marginRight="@dimen/rv_margin_left_right"
        android:layout_marginTop="@dimen/rv_margin_top_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_item_user_avatar"
                android:layout_width="@dimen/iv_member"
                android:layout_height="@dimen/iv_member"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/iv_item_user_avatar"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_user_job_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:padding="3dp"
                        android:layout_gravity="center_vertical"
                        android:text="10010"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tv_item_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textSize="18sp"/>


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_item_user_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="13750843926"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_item_user_call"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@color/colorAccent"
                android:text="呼叫"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>