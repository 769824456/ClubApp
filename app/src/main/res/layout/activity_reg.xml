<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/tl_reg"
        layout="@layout/layout_toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ic_reg"
                    android:layout_height="@dimen/ic_reg"
                    android:layout_margin="16dp"
                    android:src="@mipmap/ic_reg_club"/>

                <EditText
                    android:id="@+id/et_reg_club_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="会所名"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ic_reg"
                    android:layout_height="@dimen/ic_reg"
                    android:layout_margin="16dp"
                    android:src="@mipmap/ic_reg_addr"/>

                <EditText
                    android:id="@+id/et_reg_club_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="会所地址"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ic_reg"
                    android:layout_height="@dimen/ic_reg"
                    android:layout_margin="16dp"
                    android:src="@mipmap/ic_reg_manager"/>

                <EditText
                    android:id="@+id/et_reg_club_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="店面经理"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ic_reg"
                    android:layout_height="@dimen/ic_reg"
                    android:layout_margin="16dp"
                    android:src="@mipmap/ic_reg_scale"/>

                <Spinner
                    android:id="@+id/sp_reg_club_scale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/scale"
                    android:textSize="124sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ic_reg"
                    android:layout_height="@dimen/ic_reg"
                    android:layout_margin="16dp"
                    android:src="@mipmap/ic_reg_mobile"/>

                <EditText
                    android:id="@+id/et_reg_club_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="手机号"
                    android:inputType="phone"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ic_reg"
                    android:layout_height="@dimen/ic_reg"
                    android:layout_margin="16dp"
                    android:src="@mipmap/ic_login_pwd"/>

                <EditText
                    android:id="@+id/et_reg_club_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="密码"
                    android:password="true"
                    android:textSize="14sp"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:background="@color/colorPrimary"
                android:onClick="btnReg"
                android:text="提交"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>